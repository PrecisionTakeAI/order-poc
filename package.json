{
  "name": "order-poc",
  "version": "1.0.0",
  "description": "AWS SAM-based order management system POC",
  "main": "index.js",
  "scripts": {
    "build": "sam build",
    "deploy": "sam deploy",
    "validate": "sam validate --lint",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "local:auth": "sam local invoke AuthFunction --event events/auth-register.json",
    "local:products": "sam local invoke ProductsFunction --event events/product-get.json",
    "local:cart": "sam local invoke CartFunction --event events/cart-add-item.json",
    "local:orders": "sam local invoke OrdersFunction --event events/order-create.json",
    "local:api": "sam local start-api",
    "seed:products": "ts-node scripts/seed-products.ts",
    "seed:products:dry-run": "ts-node scripts/seed-products.ts --dry-run",
    "test:gsi": "ts-node scripts/test-gsi-queries.ts",
    "admin:add": "ts-node scripts/manage-admin.ts add",
    "admin:remove": "ts-node scripts/manage-admin.ts remove",
    "admin:list": "ts-node scripts/manage-admin.ts list"
  },
  "keywords": [
    "aws",
    "sam",
    "lambda",
    "api-gateway",
    "serverless"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.985.0",
    "@aws-sdk/lib-dynamodb": "^3.985.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.14.9",
    "aws-sdk-client-mock": "^4.1.0",
    "esbuild": "^0.27.3",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
