{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "*.ts",
    "data/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
